{
  "buildCommand": "npm run build:h5",
  "installCommand": "npm_config_production=false npm ci --legacy-peer-deps || npm_config_production=false npm install --legacy-peer-deps",
  "framework": null,
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/v1.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/admin.js": {
      "memory": 1024,
      "maxDuration": 60
    },
    "api/health.js": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/admin/:match*",
      "destination": "/api/admin"
    },
    {
      "source": "/api/v1/:match*",
      "destination": "/api/v1"
    },
    {
      "source": "/api/:match*",
      "destination": "/api"
    },
    {
      "source": "/((?!api|_next|static|favicon.ico|.*\\.).*)",
      "destination": "/index.html"
    }
  ]
}
