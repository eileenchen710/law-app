#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

if [ ! -f .vercel/project.json ]; then
  echo "husky - skipping Vercel build: missing .vercel/project.json" >&2
  echo "husky - run 'npx vercel login' and 'npx vercel pull --yes --environment=production' to enable this check" >&2
  exit 0
fi

npx vercel build
